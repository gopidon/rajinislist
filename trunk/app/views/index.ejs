<!doctype html>
<html>
<head>
    <title>Tickets 2 Spare</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="lib/fontawesome/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/common.css">
    <style>
        body{
            padding-top:60px; padding-left: 5px; padding-right: 5px;padding-bottom: 5px;

        }
        .angular-google-map-container { height: 400px}
    </style>
</head>
<body>
<!-- Declare Modals here -->

<!-- Login Modal starts...-->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title margin-bottom"><i class="fa fa-lock"></i> Login or Register with:</h4>
            </div>
            <div class="modal-body">
                <div class="margin-bottom">
                    <a style="display:block" href="/signin" class="btn btn-default margin-bottom-sm"><i class="fa fa-user"></i> Login</a>
                </div>
                <div class="margin-bottom">
                    <a style="display:block" href="/signup" class="btn btn-default"><i class="fa fa-user"></i> Signup</a>
                </div>
                <div class="margin-bottom">
                    <a style="display:block" href="/auth/facebook" class="btn btn-primary"><i class="fa fa-facebook"></i> Facebook</a>
                </div>
                <div class="margin-bottom">
                    <a style="display:block" href="/auth/twitter" class="btn btn-info"><i class="fa fa-twitter"></i> Twitter</a>
                </div>
                <div class="margin-bottom">
                    <a style="display:block" href="/auth/google" class="btn btn-danger"><i class="fa fa-google-plus"></i> Google</a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Login Modal ends .. -->

<!-- End Modals -->

<!-- Header -->
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#!"><i class="fa fa-ticket fa-lg"></i>Tickets2Spare.com</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul id="rightMenuList" class="nav navbar-nav navbar-right">
                <li><a class="btn" data-toggle="modal" data-target="#loginModal"><i class="fa fa-user"></i> Login</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main content -->
<div class="container-fluid" ng-app="indexModule" ng-controller="IndexController" >
    <h3>Listings around you</h3>
    <div class="row well">
       <div class="col-md-12">
            <google-map center="map.center" zoom="map.zoom"></google-map>
       </div>
    </div>
    <h3>Top Listings</h3>
    <div class="row well">

    </div>

</div>
<script src="lib/jquery/dist/jquery.min.js"></script>
<script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type='text/javascript' src='lib/angular/angular.min.js'></script>
<!--Angular maps -->
<script src='//maps.googleapis.com/maps/api/js?sensor=false&key=AIzaSyAnKMzE4uxSAxHiph5dndvlVPRN1j3BqMk'></script>
<script type='text/javascript' src='lib/lodash/dist/lodash.min.js'></script>
<script type='text/javascript' src='lib/angular-google-maps/dist/angular-google-maps.min.js'></script>
<script type='text/javascript' src='js/index.js'></script>
<!--Angular Translate-->
<script type='text/javascript' src='/lib/angular-translate/angular-translate.min.js'></script>
<script type='text/javascript' src='/lib/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js'></script>
</body>
</html>
